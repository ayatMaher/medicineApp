<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_background"
    android:layoutDirection="rtl"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_log_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rubik_medium"
        android:text="تسجيل الدخول"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:paddingBottom="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="البريد الالكتروني"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_background_stroke_op"
            android:hint="البريد الإلكتروني"
            android:textDirection="rtl"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:hintTextColor="#801C1A1A"
            app:startIconDrawable="@drawable/ic_mail"
            app:startIconTint="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:background="@android:color/transparent"
                android:fontFamily="@font/rubik"
                android:gravity="start|center_vertical"
                android:inputType="textEmailAddress"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik"
            android:text="كلمة المرور"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_background_stroke_op"
            android:hint="كلمة المرور"
            android:textDirection="rtl"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#919191"
            app:hintTextColor="#801C1A1A"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:background="@android:color/transparent"
                android:fontFamily="@font/rubik"
                android:gravity="start|center_vertical"
                android:inputType="textPassword"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxRememberMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="155dp"
                android:buttonTint="@color/primary_color"
                android:fontFamily="@font/rubik"
                android:text="تذكرني"
                android:textColor="#801C1A1A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="هل نسيت كلمة المرور؟"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_log"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_background_profile"
            android:fontFamily="@font/rubik"
            android:text="تسجيل الدخول"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="#EBEAEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/medium"
                android:text="أو"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#EBEAEB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_facebook"
                android:layout_width="165dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_social"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginStart="32.5dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_marginBottom="16.5dp"
                    android:fontFamily="@font/rubik"
                    android:text="Facebook"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="32.5dp"
                    android:layout_marginBottom="16sp"
                    android:src="@drawable/ic_facebook" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_google"
                android:layout_width="165dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_social"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginStart="32.5dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_marginBottom="16.5dp"
                    android:fontFamily="@font/rubik"
                    android:text="Google"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="32.5dp"
                    android:layout_marginBottom="16sp"
                    android:src="@drawable/ic_google" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="42.5dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="42.5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text="ليس لديك حساب؟"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/rubik"
                android:text="انشاء حساب "
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:progressTint="@color/primary_color"
            android:visibility="gone" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>