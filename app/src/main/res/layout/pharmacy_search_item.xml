<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pharmacy_search_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/secondary"
    android:layoutDirection="rtl"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/pharmacy_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pharmacy2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_pharmacy">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pharmacy_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="105dp"
                            android:fontFamily="@font/bold"
                            android:text="صيدلية الأسرى"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="16sp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/pharmacy_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/rubik"
                                android:text="غزة_التفاح_شارع النفق"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rate_image"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lighter_yellow"
                    android:contentDescription="Rate"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="4.5"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hour_image"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/light_yellow_green"
                    android:contentDescription="Rate"
                    android:scaleType="centerCrop"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/rubik"
                    android:text="8:00 ص_1:00 م "
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/space_image"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#D5E9EA"
                    android:contentDescription="Rate"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="4.5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="كيلو"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/contactWhatsApp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:src="@drawable/phone" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>