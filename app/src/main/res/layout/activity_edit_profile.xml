<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layoutDirection="ltr"
    tools:context=".EditProfileActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:elevation="100dp"
        android:layoutDirection="rtl"
        android:paddingTop="56dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/add_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="رجوع"
            android:src="@drawable/white_arrow_right" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/medium"
            android:text="تعديل المعلومات الشخصية"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>


    <!-- خلفية العنوان -->

    <!-- عنوان الشاشة -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="272dp"
        android:background="@drawable/profile_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header" />


    <!-- بطاقة الحقول -->
    <androidx.cardview.widget.CardView
        android:id="@+id/form_background"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:paddingHorizontal="16dp"
            android:paddingTop="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_profile_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rubik"
                    android:inputType="textPersonName"
                    android:text="ghydaa jamal"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- حقل البريد الإلكتروني -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_profile_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rubik"
                    android:hint="ghydaa@gmail.com"
                    android:inputType="textEmailAddress"
                    android:text="ghydaa@gmail.com"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- حقل رقم الجوال -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_profile_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/phone" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rubik"
                    android:inputType="phone"
                    android:text="059003030344"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- كلمة المرور -->

            <!-- حقل كلمة المرور مع أيقونة قابلة للتحجيم -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_profile_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- أيقونة القفل بالحجم الذي تختاره -->
                <ImageView
                    android:id="@+id/icon_password"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/lock" />

                <!-- مربع إدخال كلمة المرور -->
                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rubik"
                    android:inputType="textPassword"
                    android:text="********"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


            <!-- زر الحفظ -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_background_profile"
                android:fontFamily="@font/rubik"
                android:text="حفظ التعديل"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- صورة المستخدم في المنتصف -->

    <!-- زر + فوق الصورة -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:elevation="5dp"
        android:src="@drawable/user"
        android:translationY="-5dp"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerBackground"
        app:layout_constraintEnd_toStartOf="@+id/headerBackground"
        app:layout_constraintStart_toEndOf="@+id/form_background"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle_white"
        android:elevation="10dp"
        android:padding="0dp"
        android:src="@drawable/ic_add"
        android:translationX="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/header" />

</androidx.constraintlayout.widget.ConstraintLayout>
