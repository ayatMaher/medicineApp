<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/notification_item_background"
    android:layoutDirection="rtl"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_medicine"
        android:layout_width="91dp"
        android:layout_height="93dp"
        android:src="@drawable/panadol"
        android:contentDescription="دواء"
        android:layout_marginHorizontal="12dp" />

    <!-- النصوص (الرسالة والوقت) في عمود (LinearLayout عمودي) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="تم وصول دوائك بانادول"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="10:00 اليوم"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>


</LinearLayout>
